{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": ["warn", "1tbs", {"allowSingleLine": true }],
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "warn",
    "require-jsdoc": "off",
    "no-console": ["error", { "allow": ["error"] }]
  },
  "globals": {
    "Polymer": true,
    "moment": true,
    "Promise": true
  }
}
